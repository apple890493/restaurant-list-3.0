<div class="banner"></div>
<h1 class="mb-1 restaurant-show-title">{{store.name}}</h1>
<div class="container">
  <div class="row">
    <div class="restaurant-footer">
      <a href="/restaurants/{{store._id}}/edit"><button type="button" class="btn btn-primary edit mr-2"><i
            class="fas fa-edit"></i> Edit</button></a>
      <form action="/restaurants/{{store._id}}?_method=DELETE" method="POST">
        <button class="btn btn-danger mb-3 mr-2" type="submit"><i class="fas fa-trash-alt"></i> Delete</button>
      </form>
    </div>
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{store.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{store.location}}
        <a href="{{store.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{store.phone}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          <i class="fas fa-pen-nib pr-1"></i>
          評論：
        </span>
        {{store.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{store.image}}" alt="{{store.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>