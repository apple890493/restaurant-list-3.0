<!-- search bar -->
<div class="banner"></div>
<h6 class="restaurant-home-title"><i class="fas fa-cookie"></i> Your Food Journey</h6>
<h6 class="restaurant-home-title">Your Food Pocket <i class="fas fa-cookie-bite"></i></h6>

<div class="container">
  <div class="search-group">
    <div class="search-bar col-md-8">
      <div class="search-bar-outer">
        <div class="search-bar-inner">
          <form action="/restaurants/search">
            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="Enter restaurant..."
                aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="sort-bar col-md-4">
      <div class="sort-bar-outer text-align:center">
        <form action="/sorts" method="get">
          <div class="dropdown">
            <button class="btn dropdown-toggle sort-bar-btn" type="button" id="sort-group" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false"><i class="fas fa-filter"></i>
              Sort
            </button>
            <div class="dropdown-menu" aria-labelledby="sort-group">
              <button class="dropdown-item" name="by" value="name">A -> Z</button>
              <button class="dropdown-item" name="by" value="name2">Z -> A</button>
              <button class="dropdown-item" name="by" value="category">Category</button>
              <button class="dropdown-item" name="by" value="rating">Rating</button>
            </div>
        </form>
      </div>
    </div>
  </div>

</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="d-flex flex-row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurant}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="restaurant-footer mb-1">
                <a href="/restaurants/{{this._id}}/edit"><button type="button" class="btn btn-primary edit"><i
                      class="fas fa-edit"></i> Edit</button>
                </a>
                <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                  <button class="btn btn-danger ml-2" type="submit"><i class="fas fa-trash-alt"></i> Delete</button>
                </form>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>