<div class="container banner-login">
  <div class="row mt-3">
    <div class="col-4 m-auto">
      <div class="card card-body register-login">
        <h1 class="text-center">Register</h1>
        {{> message}}
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" value="{{ name }}" placeholder="Enter Name">
          </div>
          <div class="form-group">
            <label for="email">Email(*)</label>
            <input type="email" id="email" name="email" class="form-control" value="{{ email }}"
              placeholder="Enter Email">
          </div>
          <div class="form-group">
            <label for="password">Password(*)</label>
            <input type="password" id="password" name="password" class="form-control" value="{{ password }}"
              placeholder="Enter Password">
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirm Password(*)</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
              value="{{ confirmPassword }}" placeholder="Confirm Password">
          </div>
          <button type="submit" class="btn btn-info btn-block">Register</button>
          <a href="/auth/facebook" class="btn btn-info btn-block facebook-btn">Facebook Login</a>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/users/login">Login</a>
        </p>
      </div>
    </div>
  </div>
</div>