  {{!-- <link rel="stylesheet" href="/stylesheets/bootstrap.css"> --}}
  <link rel="stylesheet" href="/stylesheets/mainStyle.css">
  <link rel="stylesheet" href="/stylesheets/indexStyle.css">
  <link rel="stylesheet" href="/stylesheets/showStyle.css">
  <link rel="stylesheet" href="/stylesheets/loginStyle.css">
</head>

<body>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="FOOD POCKET">
        {{#if isAuthenticated}}{{user.name}}'s{{/if}} FOOD POCKET
      </a>
      <div class="d-flex">
        {{#if isAuthenticated}}
        <a href="/users/logout">
          <button type="button" class="btn btn-info mr-2"><i class="fa fa-user" aria-hidden="true"></i> Logout</button>
        </a>
        <a href="/restaurants/new">
          <button type="button" class="btn btn-success"><i class="fas fa-plus"></i> Create</button>
        </a>
        {{else}}
        <a href="/users/login">
          <button type="button" class="btn btn-info mr-2"><i class="fa fa-user" aria-hidden="true"></i> Login</button>
        </a>
        {{/if}}
      </div>
    </div>
  </nav>


  {{{body}}}



